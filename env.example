# =================================
# 智能思维与灵境融合项目环境配置
# =================================

# 应用环境
NODE_ENV=development
PYTHON_ENV=development

# 数据库配置
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=intelligent_thinking
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password_here

# PostgreSQL连接URL
DATABASE_URL=postgresql+asyncpg://postgres:your_password_here@localhost:5432/intelligent_thinking

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Neo4j配置
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your_neo4j_password_here

# 后端API配置
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
SECRET_KEY=your_very_secure_secret_key_here_change_in_production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# 前端配置
REACT_APP_API_URL=http://localhost:8000
REACT_APP_WS_URL=ws://localhost:8000
REACT_APP_TITLE=智能思维与灵境融合平台

# AI模型配置
OPENAI_API_KEY=your_openai_api_key_here
HUGGINGFACE_API_TOKEN=your_huggingface_token_here
MODEL_CACHE_DIR=./models_cache

# 具体模型配置
VISUAL_MODEL_NAME=openai/clip-vit-base-patch32
LOGICAL_MODEL_NAME=cardiffnlp/twitter-roberta-base-sentiment-latest
CREATIVE_MODEL_NAME=gpt2

# 文件上传配置
MAX_FILE_SIZE=50MB
UPLOAD_DIR=./uploads
ALLOWED_EXTENSIONS=txt,pdf,jpg,jpeg,png,gif,svg,mp3,mp4,avi

# 缓存配置
CACHE_TTL=3600
SESSION_TTL=86400

# WebSocket配置
WS_HEARTBEAT_INTERVAL=30
WS_MAX_CONNECTIONS=1000

# 3D渲染配置
THREEJS_MAX_OBJECTS=500
WEBXR_ENABLED=true

# 安全配置
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
ALLOWED_HOSTS=localhost,127.0.0.1

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# 邮件配置（可选）
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM_EMAIL=noreply@intelligentthinking.com

# 监控配置（可选）
ENABLE_METRICS=true
METRICS_PORT=9090

# Docker配置
COMPOSE_PROJECT_NAME=intelligent_thinking

# 生产环境特定配置
PRODUCTION_DATABASE_URL=
PRODUCTION_REDIS_URL=
PRODUCTION_SECRET_KEY=

# 开发环境配置
DEV_RELOAD=true
DEV_DEBUG=true
DEV_MOCK_AI=false

# 第三方服务配置
GOOGLE_ANALYTICS_ID=
SENTRY_DSN=

# 性能配置
MAX_WORKERS=4
CONNECTION_POOL_SIZE=20
QUERY_TIMEOUT=30

# 特性开关
ENABLE_COLLABORATION=true
ENABLE_3D_VISUALIZATION=true
ENABLE_AI_ANALYSIS=true
ENABLE_KNOWLEDGE_GRAPH=true
ENABLE_BLOCKCHAIN=false

# 实验性功能
EXPERIMENTAL_FEATURES=realtime_analysis,voice_input,gesture_control 